/* Deleted table row */

tr.deleted td {
    color: red !important;
}

.overdue {
    color: red !important;
    font-weight: bold;
}

.comment_section {
    border-bottom: 1px #ddd solid;
    margin: 5px;
    padding: 10px;
    width: 400px;
}

.comment_header {
    font-size: 12pt;
    font-weight: lighter;
    color: #363636;
}

.comment_body {
    padding: 10px 0px;
}

.comment_meta {
    color: #797979;
}

.comment_meta a {
    text-decoration: underline;
    color: inherit;
}

.attachments_container {
    overflow: hidden;
    margin-bottom: 10px;
}

.image_attachment {
    border: 1px solid grey;
    width: 200px;
    float: left;
    margin: 10px;
    margin-top: 0px;
    padding: 5px;
    background-color: #eee;
}

.image_attachment_text {
    width: 200px;
    padding-top: 5px;
}

.form_section {
    margin-bottom: 10px;
    width: 100%;
}

.form_section_header {
    padding: 5px;
    font-weight: lighter;
    color: #eee;
    background: #143D55;
    border: 1px solid black;
}

.form_section_header a {
    padding-left: 5px;
    text-decoration: none;
    color: inherit;
}

.form_section_header button {
    /* Why do all buttons have a weird offset, see every table that has buttons */
    margin-top: -1px;
    float: right;
}

.form_section_description {
    padding: 5px 10px;
    background-color: #6FA9C7;
    border: 1px solid black;
    border-top: none;
}

.form_section_body table {
    margin-top: 0px !important;
}

.form_data {
    overflow: hidden;
}

ul.pagination {
    margin: 10px;
    padding-bottom: 40px;
}

ul.pagination li {
    list-style-type: none;
    float: left;
    padding: 10px 0px;
    background-color: #6FA9C7;
}

ul.pagination li:first-child {
    padding-left: 10px;
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
}

ul.pagination li:last-child {
    padding-right: 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
}

ul.pagination li a {
    color: #ffffff;
    padding: 10px 5px;
    text-decoration: none;
}

ul.pagination li a:hover {
    color: #ffffff;
    background-color: #4D87A5;
}

ul.pagination li a.active {
    color: #343434;
    background-color: #8FCBE9;
    text-decoration: none;
}

ul.pagination li a.active:hover {
    color: #343434;
    background-color: #8FCBE9;
}

.widget_container {
    margin: 10px 0px;
    padding: 20px;
    width: 96%;
    overflow: hidden;
}

.widget_button {
    display: none;
}

.widget_config {
    width: 60px;
    background-color: #787878;
    position: relative;
    top: 0;
    float: left;
    text-align: center;
    text-decoration: none;
    color: #ffffff;
}

.widget_remove {
    width: 30px;
    background-color: #787878;
    position: relative;
    top: 0;
    float: right;
    text-align: center;
    text-decoration: none;
    color: #ffffff;
}

