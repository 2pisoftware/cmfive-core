.attachment {
    float: left;
    margin: 20px;
    padding: 8px;
    width: 250px;
    border: 1px solid silver;
}

.content-header {
	padding-top: 2px;
    font-size: 18pt;
    padding-bottom: 10px;
}

tr.disabled-row td {
	font-style:italic;
	color: red;
}

tr.enabled-row td {
	font-weight: bold;
}

.fieldtitle {
    font-weight: bold;
    background-color: #eee;
}
.fieldvalue {
    background-color: #eee;
}
input[readonly] {
    background: buttonface;
    font-weight: bold;
}

.error {
    margin: 10px;
    padding: 10px;
    border: 2px solid red;
    color: red;
    font-weight: bold;
    /*    width: 80%;*/
    
    position: absolute;
    width: 400px;
    top: 20px;
    right: 20px;
    background-color: white;
    opacity: 1;
    border-radius: 5px;
}

.createdby {
    font-size: 9px;
    color: #888;
    text-align: right;
}

.boxtitle {
    text-align: center;
    font-weight: bold;
    color: #eee;
    background: #143D55;
    width: 202px;
}


#colorbox h1 {
    text-align: center;
    font-size: 14px;
}

.handler-box {
    margin: 8px;
    border: 2px solid #f47b2b;
    float:left;
}

.handler-title {
    text-align: center;
    background: #fcc172;
    border-bottom: 2px solid #f47b2b;
}
.msg {
    margin: 20px;
    padding: 10px;
    border: 2px solid blue;
    color: blue;
    font-weight: bold;
/*    width: 80%;*/
    
    position: absolute;
    width: 400px;
    top: 20px;
    right: 20px;
    background-color: white;
    opacity: 1;
    border-radius: 5px;
}

.category-trail {
    margin-bottom: 12px;
}

table.form-wrapper,
table.form {
    border: 1px solid #333;
    background-color: #eee;
}

table.form-section {
    border-collapse: collapse;
}
table.form-section td,
table.form td
{
    padding: 10px;
        border-bottom: 1px solid #ddd;
}
table.form-section tr,
table.form tr
{
    border-bottom: 1px solid #ddd;
}


table.form-wrapper td.section,
table.form td.section{
    border-top: 1px solid #333;
    border-bottom: 1px solid #333;
    background: #143D55;
    font-weight: bold;
    color: #eee;
}



body{
    margin:0;
    font-family: Verdana;
    font-size: 10pt;
}

.tab-body {
    margin-top: 5px;
    padding-top: 10px;
    padding-left: 10px;
    padding-right: 10px;
    border: 1px solid #333;
}

#body {
    margin: 8px;
}
h1 {
    font-size: 1.8em;
}

h2 {
    font-size: 1.6em;
}

h3 {
    font-size: 1.4em;
}

.action-list ul {
    margin-left: 0px;
    margin-top: 0px;
    margin-bottom: 0px;
    padding:5px;
    list-style: none;
}

.action-list li {
    line-height: 30px;
    font-size: 1em;
}


.navlinks a {
    color: black;
    text-decoration: none;
    padding: 5px;
}

.navlinks a:hover{
    border: 1px solid #143D55;
    width: 100%;
}

.tab-head a {
    color: black;
    text-decoration: none;
    padding: 5px;
    border: 1px solid #143D55;
}
.tab-head a.active {
    background: #143D55;
    color: white;
    font-weight: bold;
}

.tab-head a:hover {
    background: #6FA9C7;
    
}

#footer{
    width: 100%;
    
    color: #333333;
    text-align: center;
    padding: 4px 0;
}


#footer a{
    color: #666666;
}

.innertube{
    margin: 10px; /*Margins for inner DIV inside each column (to provide padding)*/
    margin-top: 0;
}

.search-heading {
    font-weight: bold;
    font-style: italic;
    margin-bottom: 20px;
    padding: 5px;
}
.search-title {
    font-weight: bold;
}
.search-index {
    font-weight: bold;
    font-size: 12pt;
    padding: 5px;
    color: grey;
}
.search-result {
    padding: 6px;
}

#simple-search {
    float: right;
}
