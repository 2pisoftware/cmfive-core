.taskgroup_container { overflow: hidden; }
.taskgroup_summary {
    min-width: 150px;
    margin: 10px;
    border: 1px solid grey;
    float: left;
}

.taskgroup_summary a { text-decoration: none; }
.taskgroup_summary > thead { background-color: #cdcdcd; }
.taskgroup_summary > thead > tr > th { padding: 5px; }
.taskgroup_summary > tbody > tr:nth-child(even) { background-color: #efefef; }

.tab-body > div {
    display: none;
